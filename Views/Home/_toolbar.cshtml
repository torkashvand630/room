<div id="toolbar">
    <div class="btn-group">
        <button style="padding-right: 20px !important;" id="whiteboardTrashBtn" title="@Model.translate.WhiteBoard_ClearWhiteboard" type="button" class="whiteboardBtn">
            <i class="fa fa-trash"></i>
        </button>
        <button style="position:absolute; left:0px; top:0px; width: 46px; display:none;"
                id="whiteboardTrashBtnConfirm" title="@Model.translate.WhiteBoard_ConfirmClear" type="button" class="whiteboardBtn">
            <i class="fa fa-check"></i>
        </button>
        @*<button id="whiteboardUndoBtn" title="Undo your last step" type="button" class="whiteboardBtn">
                <i class="fa fa-undo"></i>
            </button>*@
    </div>

    <div class="btn-group">
        @*<button tool="mouse" title="Take the mouse" type="button" class="whiteboardTool">
                <i class="fa fa-mouse-pointer"></i>
            </button>
            <button style="padding-bottom: 11px;" tool="recSelect" title="Select an area" type="button"
                    class="whiteboardTool">
                <img src="~/images/dottedRec.png">
            </button>*@
        <button tool="pen" title="@Model.translate.WhiteBoard_TakePen" type="button" class="whiteboardTool penTools active">
            <i class="fa fa-pencil-alt"></i>
        </button>
        @*<button style="padding-bottom: 8px; padding-top: 6px;" tool="line" title="draw a line" type="button" class="whiteboardTool toolbarHide">
                <i class="fa fa-pencil-alt"></i>
            </button>*@
        <button style="padding-bottom: 8px; padding-top: 6px;" tool="line" title="@Model.translate.WhiteBoard_drawLine" type="button" class="whiteboard-tool whiteboardTool  toolbarHide">
            ╱
        </button>
        <button tool="rect" title="@Model.translate.WhiteBoard_drawRectangle" type="button" class="whiteboardTool toolbarHide">
            <i class="far fa-square"></i>
        </button>
        <button tool="circle" title="@Model.translate.WhiteBoard_drawCircle" type="button" class="whiteboardTool toolbarHide">
            <i class="far fa-circle"></i>
        </button>
        <button tool="text" title="@Model.translate.WhiteBoard_writeText" type="button" class="whiteboardTool toolbarHide">
            <i class="fas fa-font"></i>
        </button>
        <button tool="eraser" title="@Model.translate.WhiteBoard_takeEraser" type="button" class="whiteboardTool">
            <i class="fa fa-eraser"></i>
        </button>
    </div>

    <div class="btn-group">
        <button style="width: 100px; cursor:default;">
            <div class="activeToolIcon" style="position:absolute; top:2px; left:2px; font-size: 0.6em;">
