            <img style="position: absolute;left: 5px;top: 10px;height:14px;width: 60px;" src="/images/slider-background.svg">
            <input title="@Model.translate.WhiteBoard_Thickness" id="whiteboardThicknessSlider" style="position: absolute;left:9px;width: 60px;top: 10px;" type="range" min="1" max="30" value="8">
            <div title="@Model.translate.WhiteBoard_Colorpicker" style="position: absolute;left: 75px;top: 5px;width: 20px;height: 20px;border-radius: 2px;overflow: hidden;border: 1px solid darkgrey;">
                <div id="whiteboardColorpicker" value="#000000" style="width: 30px; height: 30px; border: 0px; padding: 0px; position: relative; top: 0px; left: -5px; background-color: rgb(175, 21, 21); color: rgb(221, 221, 221);">
                </div>
            </div>
        </button>
    </div>

    <div id="pagingBoard" class="input-group">
        <i class="fa fa-angle-left" aria-hidden="true" style="font-size:24px;padding-right:5px;cursor:pointer;" onclick="prevPage()"></i>
        <select class="custom-select" id="inputGroupSelect04" aria-label="Example select with button addon" style="height:23px;margin:0px;padding:0px;width:48px;padding-left:4px;">
            <option selected="">1</option>
            <option value="1">2</option>
        </select>
        <i class="fa fa-angle-right" aria-hidden="true" style="font-size:24px;padding-left:5px;cursor:pointer;" onclick="nextPage()"></i>
    </div>

</div>
