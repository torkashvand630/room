<div style="overflow-y:overlay;padding:7px;" id="chatContiner">

</div>
@{
    var menudisplay = Model.isRecorder == 1 ? "display:none" : "";
}
<div id="chatInputPanel" style="@menudisplay">
    <form action="" onsubmit="chatService.sendTextMessage()" style="width: 100%; max-width:100%;">

        <div style="width:80%;float:right;">
            <input style="width: 100%; height: 30px; background-color: #f5f5f3cf; border-width: 1px;" type="text" id="chatInput" />
        </div>

        <div style=" width: 20%; float: left;">
            <input type="submit" value="@Model.translate.send" style="border-radius: 0px; width: 100%; height: 30px; padding: 2px; background-color: #707f7f !important; border-color: #707f7f !important;" class="btn btn-success" onclick="chatService.sendTextMessage()">
        </div>
        @*<input type="submit" value="Submit">*@
    </form>


</div>
